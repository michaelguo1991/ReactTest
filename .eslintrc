{
  "extends": "airbnb", #使用airbnb标准检测
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  # "parser": "babel-eslint",
  # "parserOptions": {
  #   "ecmaVersion": 6,
  #   "ecmaFeatures": {
  #     "experimentalObjectRestSpread": true,
  #     "jsx": true
  #   },
  #   "sourceType": "module"
  # },
  "plugins": [
    "react"
  ],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }], #在js、jsx中都允许jsx语法
    "react/prop-types": 0,
    "react/no-multi-comp": 0,
    # "arrow-body-style": [0], #是否开启对()=>() function的检查
    "import/no-extraneous-dependencies": 0,
    "comma-dangle": 0,
    "no-unused-expressions": [2, { "allowShortCircuit": true, "allowTernary": true }],
    "no-console": 0,
    "no-plusplus": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "linebreak-style": 0
  }
}
